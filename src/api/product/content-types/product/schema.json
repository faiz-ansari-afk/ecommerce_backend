{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "sub_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::sub-category.sub-category"
    },
    "shop_price": {
      "type": "integer",
      "required": false
    },
    "base_price": {
      "type": "integer",
      "required": true
    },
    "inStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "stock_quantity": {
      "type": "integer",
      "required": true
    },
    "color_and_size_variants": {
      "type": "component",
      "repeatable": true,
      "component": "tshirts-variants.tshirt-variants"
    },
    "additional_data": {
      "type": "json"
    }
  }
}
